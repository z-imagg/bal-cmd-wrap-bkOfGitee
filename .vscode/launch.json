//// 修改PYTHONPATH， 需要 重启vscode后 生效
{
    "version": "0.2.0",
    "configurations": [
        ////// bash调试
// vscode安装扩展bash-debug以调试bash脚本
//      https://marketplace.visualstudio.com/items?itemName=rogalmic.bash-debug
        {
            "type": "bashdb",
            "request": "launch",
            "name": "Bash调试当前脚本",
            "program": "${file}",
            // "terminalKind": "integrated", #此行可有可无
        },
        ////// python调试
        //     interceptor_xx.py --__develop_mode  --__help

        {
            "name": "interceptor_cxx 【固定参数】【废弃，因为不能直接运行拦截器】",
            "type": "debugpy",
            "request": "launch",
            "program": "interceptor_xx.py",
            "console": "integratedTerminal",
            "args": [  
],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:/app/cmd-wrap/py_util/:/app/cmd-wrap/entity/:"
            },
        },

        
        {
            "name": "gcc【由interceptor_cxx伪装】",
            "type": "debugpy",
            "request": "launch",
            "program": "bin/gcc",
            "console": "integratedTerminal",
            "args": [  
"-c", "/app/cmd-wrap/test_cxx_src/TestCxx01.cpp",
"--__enable_develop_mode",
"-g1"
],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:/app/cmd-wrap/py_util/:/app/cmd-wrap/entity/:"
            },
        },
        
        {
            "name": "修bug【拦截器化身c++】",
            "type": "debugpy",
            "request": "launch",
            "program": "bin/gcc",
            "console": "integratedTerminal",
            "args": [  
"-Wl,-rpath", "/app/cmd-wrap/test_cxx_src/TestCxx01.cpp",
"-o", "TestCxx01.0"
],
            "env": {
                "PYTHONPATH": "${workspaceFolder}:/app/cmd-wrap/py_util/:/app/cmd-wrap/entity/:"
            },
        },
    ]
}